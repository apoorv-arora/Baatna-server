<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.application.baatna.bean.User" table="USER">

		<id column="USERID" name="userId" type="java.lang.Integer">
			<generator class="native" />
		</id>
		<property column="PROFILE_PIC" name="profilePic" type="java.lang.String" />
		<property column="USER_NAME" name="userName" type="java.lang.String" />
		<property column="PASSW" name="passWord" type="java.lang.String" />
		<property column="EMAIL" name="email" type="java.lang.String" />
		<property column="ADDRESS" name="address" type="java.lang.String" />
		<property column="PHONE" name="phone" type="java.lang.String" />
		<property column="BIO" name="bio" type="java.lang.String" />
		<property column="ISVERIFIED" name="isVerified" type="java.lang.Integer" />
		<property column="FACEBOOKID" name="facebookId" type="java.lang.String" />
		<property column="FACEBOOKDATA" type="string" length="10000" name="facebookData" />
		<property column="FACEBOOKTOKEN" name="facebookToken" type="java.lang.String" />
		<property column="FACEBOOKPERMISSION" name="fbPermission" type="java.lang.String" />
		<property column="ISINSTITUTIONVERIFIED" name="isInstitutionVerified" type="java.lang.Integer" />
		<property column="INSTITUTIONNAME" name="institutionName" type="java.lang.String" />
		<property column="BranchName" name="branchName" type="java.lang.String" />
		<property column="PhoneNumber" name="phoneNumber" type="java.lang.String" />
		<property column="Year" name="year" type="java.lang.Integer" />
		<property column="STUDENTID" name="studentId" type="java.lang.String" />
		<property column="TimeStamp" name="timestamp" type="java.lang.Long" />
		<property column="MODIFIED" name="modified" type="java.lang.Long" />
		<set name="acceptedWishes" table="USERWISH" lazy="false" cascade="all">
			<key column="USERID" />
			<many-to-many entity-name="com.application.baatna.bean.Wish">
			     <column name="WISHID" />
		    </many-to-many>
		</set>
		<set name="declinedWishes" table="USERWISH" lazy="false" cascade="all">
			<key column="USERID" />
			<many-to-many entity-name="com.application.baatna.bean.Wish">
			     <column name="WISHID" />
		    </many-to-many>
		</set>
		
	</class>
</hibernate-mapping>
